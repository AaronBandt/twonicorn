<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>

<script>

$(document).ready(function(){
  var i=1;
  $("#add_row").click(function(){
    $('#ul_deploy').append('<li id="addr'+i+'">crap '+i+'</li>');
    i++;
  });
  $("#delete_row").click(function(){
    if(i>1){
      $("#addr"+(i-1)).remove();
      i--;
    }
  });
});

</script>



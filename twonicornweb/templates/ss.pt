<div metal:use-macro="layout">
    <div metal:fill-slot="content">

      <script src="/static/jquery-2.1.3.min.js"></script>
      <script src="/static/jquery.validate.min.js"></script>
      <script src="/static/additional-methods.min.js"></script>
      <script>
        // Only show package name for types that require it.
        $(function() {
          $(document.body).on('change', 'project_type' ,function(){
            if ($.inArray($(this).val(), ["python", "tar"]) > -1) {
                $( "#pkg_td"+pkg_td_idx[1] ).show();
                $( "#package_name"+pkg_td_idx[1] ).prop('required',true);
            } else {
                $( "#pkg_td"+pkg_td_idx[1] ).hide();
                $( "#package_name"+pkg_td_idx[1] ).prop('required',false);
            }
          });

    $('#submit').validate({
        wrapper: "span",
        errorClass: "invalid",
        rules: {
            project_type: {
                required: true,
            },
            project_name: {
                required: true,
                alphanumeric: true,
                minlength: 5
            },
            code_review: {
                required: true,
            },
            job_prefix: {
                required: true,
                rangelength: [2, 5]
            },
            job_server: {
                required: true,
            },
        },
        errorPlacement: function(error, element) {
            error.insertAfter(element);
//            error.appendTo(element.parent().next());
        }
    });

// $(function() {
//    $("#submit_btn").click(function(){
//       if (confirm("Click OK to continue?")){
//          $('form#submit').submit();
//       }
//    });
// });
        });

      </script>

      <div tal:condition="not confirm">
        <form id="submit" class="ss_form" action="/ss" method="POST" onsubmit="return(validate());">
          <input type="hidden" name="form.process"/>
     
            <div>
              <h2>Project type</h2>
            </div>
            <div>
                <select id="project_type" name="project_type" title="Please select something!">
                  <option value="">Select...</option>
                  <option value="tomcat">tomcat</option>
                  <option value="python">python</option>
                  <option value="jar">jar</option>
                  <option value="tar">tar</option>
                </select>
            </div>
            <div>
              <h2>Project Name</h2>
            </div>
            <div>
                <input type="text" id="project_name" name="project_name" placeholder="Name of your project" />
            </div>
            <div>
              <h2>Code Review</h2>
            </div>
            <div>
                <select id="code_review" name="code_review" required>
                  <option value="no_review">No Code Review</option>
                  <option value="review">Code Review</option>
                </select>
            </div>
            <div>
              <h2>Job Prefix</h2>
            </div>
            <div>
              <input type="text" id="job_prefix" name="job_prefix" placeholder="PREFIX" />
            </div>
            <div>
              <h2>Job Server</h2>
            </div>
            <div>
                <select id="job_server" name="job_server" title="Please select something!">
                  <option value="">Select...</option>
                  <option value="ops">ops</option>
                  <option value="stats">stats</option>
                  <option value="coredata">coredata</option>
                </select>
            </div>
            <div>
              <input id="submit_btn" class="button" type="submit" name="submit" value="Submit"/>
            </div>
        </form>

      </div>

      <div tal:condition="confirm">
        <div>
          <h2>We are ready to create the following resources. Continue?</h2>
          <div>
            <h3>Git Repos</h3>
            <p>${results.git_code_repo}
            <p>${results.git_conf_repo}
          </div>
          <div>
            <h3>Jenkins Jobs</h3>
            <p>${results.job_review_name}
            <p>${results.job_code_name}
            <p>${results.job_conf_name}
          </div>
          <div>
            <h3>Installation dirs</h3>
            <p>${results.dir_app}
            <p>${results.dir_conf}
          </div>
        
        </div>
        <form class="cp_form" action="/ss" method="POST">
          <input type="hidden" name="form.confirm"/>
          <ul>
            <li>
              <input class="button" type="submit" name="submit" value="Confirm"/>
              <input class="button" type="submit" name="submit" value="Edit"/>
            </li>
          </ul>
        </form>
      </div>

  </div>
</div>

<div metal:use-macro="layout">
    <div metal:fill-slot="content">

    <p>${user.first_last} (${user.login}) is a member of the following groups in Active Directory:</p>

    <p>
    <table width="100%" tal:condition="user.groups">
      <tr>
        <th>Group Name</th>
      </tr>
      <tbody tal:repeat="item user.groups">
      <tr>
        <td tal:content="item">
      </tr>
      </tbody>
    </table>

  </div>
</div>
